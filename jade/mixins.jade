//- ---------------------------- image / video + caption mixin ------------------------------- //	
mixin image-caption(alink, datalightbox, imagelink, imagealt)
	div.banner-video.wow.fadeInUp
		div.imagen
			div#video
				figure.galeria
					a.example-image-link(href=alink data-lightbox=datalightbox)
						img.example-image(src=imagelink alt=imagealt)
		div.texto_imagen
			div.img-footer
				block
				
				
//- ---------------------------- Video mixin ------------------------------- //
mixin video(url)
	div.banner-videos.wow.fadeInUp
		div#video
			div.embed-container
				iframe(src=url) 
				
				
				
//- ---------------------------- Accordion mixin ------------------------------- //
//- mixin container
mixin accordion(numberid)
	div.accordion(id= numberid)
		block

//- mixin accordion item		
mixin accordion-item(dataparent, href, target, title)
	div.accordion-group.wow.fadeInUp
		div.accordion-heading
			a.accordion-toggle(data-toggle='collapse' data-parent=dataparent href=href)
				span= title
		div.accordion-body.collapse(id= target)
			div.accordion-inner
				block
				
