mixin paginador(linkatras, class1, Anterior, linkadelante, class2, Siguiente)
	div.progress-fullbar
		div.pager
			div.paginas
				ul
					li.previous
						a(href=linkatras class=class1)
							i.fa.fa-angle-left(aria-hidden="true")
							| &nbsp;
							span= Anterior 
					li.next
						a(href=linkadelante class=class2)
							span= Siguiente 
							| &nbsp;
							i.fa.fa-angle-right(aria-hidden="true")
			div.counter
				<p><span class="eta"></span> (<!--<span class="words"></span>--> &cong; Tiempo de lectura )</p>
			div.menuanchorbot
				a(href="#menu") Menú
				//- <a href="#" id="scrollup">Scroll</a>
		div.progressContainer
			div#progress.progress
			
			
mixin paginador-menu
