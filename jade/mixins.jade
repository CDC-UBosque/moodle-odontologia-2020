//- ---------------------------- Tables ------------------------------- //

//- initialization
- blocks = {}

mixin set(key)
	- blocks[key] = this.block

//- mixin definition
mixin tables-containers(caption)
	table.table.table-striped
		caption= caption
			block
			thead
				- blocks.thead()
			tbody
				- blocks.tr()
				
				
//- ---------------------------- Tabs ------------------------------- //
mixin tabs-container
	div.bs-docs
		ul#myTab.nav.nav-tabs
			block titles
		div#myTabContent.tab-content
			block content
				
mixin tabs-buttons(state, href, numero)
	block
	li(class=state)
		a(href=href data-toggle='tab')= numero
		
mixin tabs-content-tab(state, in, numero)
	block
	div.tab-pane.fade(class=state in id=numero)
		

